<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .9
        Rectangle:
            size: self.size
    Label:
        font_size: dp(50)
        text: root.parent.title
        pos_hint: {"center_x": .5, "center_y": .7}
    Label:
        font_size: dp(30)
        text: root.parent.game_over_score
        pos_hint: {"center_x": .5, "center_y": .5}
    Button:
        font_size: dp(25)
        text: root.parent.sb
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .1
        on_press: root.parent.start_button()
        background_color: .4, 1, 0, .30
